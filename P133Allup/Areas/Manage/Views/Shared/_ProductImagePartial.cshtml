@model IEnumerable<ProductImage>

@if (Model != null && Model.Count() > 0)
{
    foreach (ProductImage productImage in Model)
    {
        <div class="col-lg-2">
            <img style="width:100px;" src="~/assets/images/product/@productImage.Image" />
            @if (Model.Count() > 1)
            {
                <a asp-area="manage" asp-controller="product" asp-action="deleteimage" data-imageId="@productImage.Id" asp-route-id="@productImage.ProductId" class="btn btn-danger deleteImage">Delete Image</a>

            }
        </div>

    }

}

